{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo: Debug Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "-c",
                "${workspaceFolder}/odoo.conf",
                "--dev=all"
            ],
            "justMyCode": false
        }
    ]
}