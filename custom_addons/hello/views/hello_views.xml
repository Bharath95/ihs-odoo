<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hello_model_tree" model="ir.ui.view">
        <field name="name">hello.model.tree</field>
        <field name="model">hello.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record id="view_hello_model_form" model="ir.ui.view">
        <field name="name">hello.model.form</field>
        <field name="model">hello.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_hello_root" name="Hello" sequence="10"/>
    <menuitem id="menu_hello_model" name="Hello Models" parent="menu_hello_root" action="action_hello_model"/>

    <record id="action_hello_model" model="ir.actions.act_window">
        <field name="name">Hello Models</field>
        <field name="res_model">hello.model</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
