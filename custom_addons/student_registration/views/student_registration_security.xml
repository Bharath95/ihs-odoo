<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Student Registration Security Groups -->
        <record id="module_student_registration_category" model="ir.module.category">
            <field name="name">Student Registration</field>
            <field name="description">Helps you manage student registration and admissions</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_student_registration_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_student_registration_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_student_registration_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_student_registration_category"/>
            <field name="implied_ids" eval="[(4, ref('group_student_registration_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Portal Profile Access Group -->
        <record id="group_student_portal_profile" model="res.groups">
            <field name="name">Student Portal Profile</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Record Rules -->
        <record id="student_registration_comp_rule" model="ir.rule">
            <field name="name">Student Registration: multi-company rule</field>
            <field name="model_id" ref="model_student_registration"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="student_profile_comp_rule" model="ir.rule">
            <field name="name">Student Profile: multi-company rule</field>
            <field name="model_id" ref="model_student_profile"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- User Access Rules -->
        <record id="student_registration_user_rule" model="ir.rule">
            <field name="name">Student: See own registrations</field>
            <field name="model_id" ref="model_student_registration"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_student_portal_profile'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="student_profile_user_rule" model="ir.rule">
            <field name="name">Student: See own profile</field>
            <field name="model_id" ref="model_student_profile"/>
            <field name="domain_force">[('student_reg_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_student_portal_profile'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>