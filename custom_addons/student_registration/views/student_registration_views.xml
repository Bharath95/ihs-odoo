<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Registration Form View -->
    <record id="view_student_registration_form" model="ir.ui.view">
        <field name="name">student.registration.form</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <form string="Student Registration">
                <header>
                    <button name="action_submit_application" string="Submit Application" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('application_stage', '!=', 'draft')]}"/>
                    <button name="action_review_application" string="Review Application" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('application_stage', '!=', 'submitted')]}"/>
                    <button name="action_approve_application" string="Approve" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('application_stage', '!=', 'under_review')]}"/>
                    <button name="action_reject_application" string="Reject" type="object" 
                            attrs="{'invisible': [('application_stage', '!=', 'under_review')]}"/>
                    <field name="application_stage" widget="statusbar" 
                           statusbar_visible="draft,submitted,under_review,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="full_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="nationality"/>
                            <field name="application_year"/>
                            <field name="applied_for"/>
                            <field name="applicant_user"/>
                        </group>
                        <group>
                            <field name="applied_to_ihs_before"/>
                            <field name="previous_application_application_year" 
                                  attrs="{'invisible': [('applied_to_ihs_before', '!=', 'yes')],
                                         'required': [('applied_to_ihs_before', '=', 'yes')]}"/>
                            <field name="previous_application_applied_for" 
                                  attrs="{'invisible': [('applied_to_ihs_before', '!=', 'yes')],
                                         'required': [('applied_to_ihs_before', '=', 'yes')]}"/>
                            <field name="previous_application_remarks" 
                                  attrs="{'invisible': [('applied_to_ihs_before', '!=', 'yes')]}"/>
                            <field name="student_profile_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contact Information">
                            <group>
                                <group>
                                    <field name="comm_address_line_1"/>
                                    <field name="comm_address_line_2"/>
                                    <field name="comm_address_city"/>
                                    <field name="comm_address_state"/>
                                </group>
                                <group>
                                    <field name="comm_address_area_code"/>
                                    <field name="comm_address_country"/>
                                    <field name="phone_number"/>
                                    <field name="email_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents">
                            <group>
                                <field name="recent_photograph" widget="image" class="oe_avatar"/>
                                <field name="birth_certificate" widget="binary" filename="birth_certificate_filename"/>
                                <field name="id_proof" invisible="1"/>
                                <field name="id_proof_document" widget="binary" filename="id_proof_document_filename"/>
                            </group>
                        </page>
                        <page string="Application Status">
                            <group>
                                <group>
                                    <field name="submission_date" readonly="1"/>
                                    <field name="review_date" readonly="1"/>
                                    <field name="decision_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="application_fee_status"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Student Registration Tree View -->
    <record id="view_student_registration_tree" model="ir.ui.view">
        <field name="name">student.registration.tree</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <tree string="Student Registrations" decoration-info="application_stage=='draft'" 
                  decoration-warning="application_stage=='submitted'" 
                  decoration-success="application_stage=='approved'" 
                  decoration-danger="application_stage=='rejected'">
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="date_of_birth"/>
                <field name="application_year"/>
                <field name="applied_for"/>
                <field name="submission_date"/>
                <field name="application_stage"/>
            </tree>
        </field>
    </record>

    <!-- Student Registration Search View -->
    <record id="view_student_registration_search" model="ir.ui.view">
        <field name="name">student.registration.search</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <search string="Search Student Registrations">
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="application_year"/>
                <field name="applied_for"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('application_stage', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('application_stage', '=', 'submitted')]"/>
                <filter string="Under Review" name="under_review" domain="[('application_stage', '=', 'under_review')]"/>
                <filter string="Approved" name="approved" domain="[('application_stage', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('application_stage', '=', 'rejected')]"/>
                <separator/>
                <filter string="My Applications" name="my_applications" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                    <filter string="Application Year" name="group_by_year" context="{'group_by': 'application_year'}"/>
                    <filter string="Applied For" name="group_by_applied_for" context="{'group_by': 'applied_for'}"/>
                    <filter string="Application Stage" name="group_by_stage" context="{'group_by': 'application_stage'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Student Registration Action Window -->
    <record id="action_student_registration" model="ir.actions.act_window">
        <field name="name">Student Registrations</field>
        <field name="res_model">student.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new student registration
            </p>
            <p>
                Create student applications for admission to the school.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_student_registration_root"
              name="Student Registration"
              web_icon="student_registration,static/description/icon.png"
              sequence="100"/>

    <menuitem id="menu_student_registration_main"
              name="Registrations"
              parent="menu_student_registration_root"
              sequence="10"/>

    <menuitem id="menu_student_registration"
              name="Student Registrations"
              parent="menu_student_registration_main"
              action="action_student_registration"
              sequence="1"/>
</odoo>