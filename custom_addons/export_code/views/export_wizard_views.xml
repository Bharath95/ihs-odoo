<odoo>
  <record id="view_export_wizard_form" model="ir.ui.view">
    <field name="name">export.code.wizard.form</field>
    <field name="model">export.code.wizard</field>
    <field name="arch" type="xml">
      <form string="Export Code">
        <footer>
          <button string="Export to Files"
                  type="object"
                  name="action_export"
                  class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </record>
  
  <record id="action_export_wizard" model="ir.actions.act_window">
    <field name="name">Export Code</field>
    <field name="res_model">export.code.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_export_code"
            name="Export Code"
            parent="base.menu_custom"
            action="action_export_wizard"/>
</odoo>
